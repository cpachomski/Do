
<div class='container-fluid'>
  <div id="index-container" class='row'>
    <div id='sideBar' class=' col-sm-3'>
      <div class='page-header'>
         <h1>Do </h1>
      </div>
    </div>
    <div id="postsList" class=' col-sm-9'>
      <div class='container'>
        <% @posts.each do |post|  %>

          <div class="blogPost">
            <p><h2><%= post.title %></h2><%= post.created_at.strftime("%B %d, %Y") %></p>
              <div class="postBody">
               <p><%= post.body %></p>
              </div>
           </div>

        <% end %>
      </div>
      </div>
      <%= link_to 'New Post', new_post_path %>
    </div>
  </div>
</div>