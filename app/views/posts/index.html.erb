
<div class='container-fluid'>

  <div id="index-container" class='row'>

    <div class='col-sm-3'>
      <div id='sideBar'>
        <div class='page-header'>
           <h1>Do.JS</h1>

        </div>
        <div id="info">
            <p>Ruby & JavaScript Musings</p>
            <p>By Chris Pachomski</p>
        </div>
      </div>
    </div>

    <div class=' col-sm-9'>
      <div id="postsList">
        <% @posts.each do |post|  %>

          <div class="blogPost">
            <div class="postHead"><strong><%= post.title %></strong></div><%= post.created_at.strftime("%B %d, %Y") %> By: Chris Pachomski

              <div class="postBody">
               <p><%= simple_format post.body %></p>
              </div>
           </div>
           <hr>

        <% end %>

    </div>

  </div>
</div>
