
<div class='container-fluid'>

  <div id="index-container" class='row'>

    <div id='sideBar' class=' col-sm-3'>
      <div class='page-header'>
         <h1>Do </h1>
      </div>
    </div>

    <div id="postsList" class=' col-sm-9'>

        <% @posts.each do |post|  %>

          <div class="blogPost">
            <div class="postHead"><strong><%= post.title %></strong><%= post.created_at.strftime("%B %d, %Y") %></div>

              <div class="postBody">
               <p><%= post.body %></p>
              </div>
           </div>
           <hr>

        <% end %>

    </div>

  </div>
</div>
